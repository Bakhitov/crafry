// Try Prisma Accelerate: https://pris.ly/cli/accelerate-init

generator client {
  provider        = "prisma-client-js"
  output          = "../generated/prisma"
  previewFeatures = ["nativeDistinct", "postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("POSTGRES_PRISMA_URL")
  extensions = [pg_vector, pgcrypto]
}

// Определение моделей соответствующих существующим таблицам
// Здесь нужно создать модели соответствующие существующим таблицам в БД
// После создания моделей, выполните команду:
// npx prisma db pull
// чтобы Prisma сгенерировала модели по существующей базе данных

model Example {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("examples")
}
